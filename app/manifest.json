{
  "manifest_version": 2,

  "name": "__MSG_Shipscope__",
  "short_name": "__MSG_Shipscope__",
  "default_locale": "en",
  "description": "Get Codeship build notifications with Shipscope.",
  "version": "1.3.0",
  "icons": {
    "48": "img/shipscope_icon_48.png",
    "128": "img/shipscope_icon_128.png"
  },
  "permissions": [
    "notifications",
    "storage",
    "https://www.codeship.io/",
    "https://codeship.com/"
    ],
  "background": {
    "page": "background.html"
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true,
    "open_in_tab": false
  },
  "browser_action": {
    "default_icon": "img/shipscope_icon_19.png",
    "error_icon": "img/shipscope_icon_19_error.png",
    "default_title": "Shipscope",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://www.google-analytics.com https://codeship.com https://js.pusher.com 'unsafe-eval'; object-src 'self'"
}
